<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 원형 이미지 스타일 (Material ShapeAppearance 사용) -->
    <style name="CircleImageView" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- 상단 모서리만 둥글게 -->
    <style name="RoundedTopCorners" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!-- 공용 AlertDialog 오버레이 -->
    <style name="Wearther.AlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <!-- 공개 속성만 유지 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>

    </style>

    <!-- 권한 요청 다이얼로그: AlertDialog 오버레이 재사용 -->
    <style name="PermissionDialogStyle" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <!-- 사용자 프로필 다이얼로그 -->
    <style name="UserProfileDialogStyle" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <!-- 댓글 다이얼로그 (기존의 고정 높이/최소폭 속성 제거) -->
    <style name="CommentDialogStyle" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <!-- 바텀시트 오버레이 (원하면 모서리 등 커스텀) -->
    <style name="Wearther.BottomSheetTheme" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <!-- 필요 시 shapeAppearanceMediumComponent 등을 지정 가능 -->
    </style>

</resources>
